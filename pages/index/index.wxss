/* pages/hello/hello.wxss */
.temp {
  text-align: center;
  font-size: 200rpx;
  line-height: 280rpx;
  opacity: 0.8
}

.weather {
  text-align: center;  
  font-size: 40rpx;
  line-height: 56rpx;
  opacity: 0.65  
}

.weather-wrapper {
  position: relative;
  width: 750rpx;
  padding-top: 174rpx;
  padding-bottom: 250rpx;
}

.weather-bg {
  /*使用绝对布局，图片从左上角开始，宽高占据100% 
  z-index: -1 指此视图在此层所有视图之后 */
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1
}