/* pages/hello/hello.wxss */

.temp {
  text-align: center;
  font-size: 200rpx;
  line-height: 280rpx;
  opacity: 0.8;
}

.weather {
  text-align: center;
  font-size: 40rpx;
  line-height: 56rpx;
  opacity: 0.65;
}

.weather-wrapper {
  position: relative;
  width: 750rpx;
  padding-top: 174rpx;
  padding-bottom: 250rpx;
}

.weather-bg {
  /*使用绝对布局，图片从左上角开始，宽高占据100% 
  z-index: -1 指此视图在此层所有视图之后 */
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}

.weather-today{
  display: flex;
  align-items: center;
  position: absolute;
  bottom: 0;
  left: 40rpx;
  right: 40rpx;
  height: 90rpx;
  font-size: 30rpx;
  line-height: 42rpx;
  border-top: 1px solid rgba(0, 0, 0, 0.1);
  color: rgba(0, 0, 0, 0.5);
}

.temp-text {
  text-align: right;
  flex-grow: 1;
  padding-right: 30rpx;
}

.arrow-icon {
  width: 13rpx;
  height: 24rpx;
}

.timetips {
  display: flex;
  display: -webkit-flex;
  justify-content: center;
  align-items: center;
  margin-top: 40rpx;
  margin-bottom: 45rpx;
}

.timetips-icon {
  width: 36rpx;
  height: 28rpx;
  margin-right: 10rpx;
}

.timetips-text {
  font-size: 30rpx;
  line-height: 42rpx;
  opacity: 0.5;
}

.forecast-list {
  display: flex;
}

/* 
  flex-shrink: 0; 添加了此属性，就不能自动压缩，每一个item的width都是我们指定的120rpx了
 */
.forecast-item {
  display: flex;
  flex-direction: column;
  flex-shrink: 0;
  width: 120rpx;
  align-items: center
}

.forecast-time {
  font-size: 30rpx;
  line-height: 42rpx;
}

.forecast-weather {
  width: 60rpx;
  height: 60rpx;
  margin-top: 50rpx;
}

.forecast-temp {
  margin-top: 46rpx;
  font-size: 40rpx;
  line-height: 56rpx;
}
