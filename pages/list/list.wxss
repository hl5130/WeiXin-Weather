.weather-item {
  display: flex;
  align-items: center;
  height: 150rpx;
  margin-left: 40rpx;
  margin-right: 40rpx;
  border-bottom: 1px solid rgba(0, 0, 0, 0.1)
}

.day {
  font-size: 40rpx;
  line-height: 56rpx;
  opacity: 0.8;
}

.date {
  font-size: 25rpx;
  line-height: 35rpx;
  opacity: 0.5; 
}

.weather-temp {
  flex-grow: 1;
  text-align: center;
  font-size: 40rpx;
  line-height: 56rpx;
  opacity: 0.8;
}

.weather-icon {
  width: 90rpx;
  height: 90rpx;
}
